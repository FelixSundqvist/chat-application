{
    "rules": {
        ".read": false,
        ".write": false,
        "publicRooms": {
            ".read": "auth != null",
            "$roomId": {
                ".validate": "newData.hasChildren(['name'])",
                "name": {
                    ".validate": "newData.isString() && newData.val().length > 0"
                },
                "$other": {
                    ".validate": false
                }
            }
        },
        "privateRooms": {
            "$roomId": {
                ".read": "root.child('userRooms').child(auth.uid).child($roomId).val() == true",
                ".write": "newData.exists() && !data.exists()",
                ".validate": "newData.hasChildren(['name, createdBy, createdAt'])",
                "name": {
                    ".validate": "newData.isString() && newData.val().length > 0"
                },
                "createdBy": {
                    ".validate": "newData.isString() && newData.val() == auth.uid"
                },
                "createdAt": {
                    ".validate": "newData.isNumber() && newData.val() > 0"
                },
                "$other": {
                    ".validate": false
                }
            }
        },
        "userRooms": {
            "$userId": {
                ".read": "auth.uid == $userId",
                ".write": "auth.uid == $userId"
            }
        },
        "messages": {
            "$roomId": {
                ".read": "root.child('publicRooms').child($roomId).exists() || root.child('userRooms').child(auth.uid).child($roomId).val() == true",
                ".write": "newData.exists() && !data.exists() && (root.child('publicRooms').child($roomId).exists() || root.child('userRooms').child(auth.uid).child($roomId).val() == true)",
                ".indexOn": [
                    "createdAt"
                ],
                "$message": {
                    ".write": "newData.exists() && !data.exists() && newData.child('createdBy').val() == auth.uid",
                    "content": {
                        ".validate": "newData.isString() && newData.val().length > 0"
                    },
                    "createdAt": {
                        ".validate": "newData.isNumber() && newData.val() > 0"
                    },
                    "createdBy": {
                        ".validate": "newData.isString() && newData.val().length > 0"
                    },
                    "$other": {
                        ".validate": false
                    }
                }
            }
        },
        "messageSeenBy": {
            "$roomId": {
                ".read": "root.child('privateRooms').child($roomId).exists() && root.child('userRooms').child(auth.uid).child($roomId).val() == true",
                ".write": "root.child('privateRooms').child($roomId).exists() && root.child('userRooms').child(auth.uid).child($roomId).val() == true",
                "$message": {
                    ".write": "newData.child('userId').val() == auth.uid",
                    ".validate": "newData.hasChildren(['userId', 'timestamp'])",
                    "userId": {
                        ".validate": "newData.isString() && newData.val().length > 0"
                    },
                    "timestamp": {
                        ".validate": "newData.isNumber() && newData.val() > 0"
                    }
                }
            }
        }
    }
}