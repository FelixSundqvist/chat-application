{
  "functions": [
    {
      "source": "./packages/functions",
      "codebase": "default",
      "ignore": [
        "node_modules",
        ".git",
        "firebase-debug.log",
        "firebase-debug.*.log",
        "*.local"
      ],
      "predeploy": [
        "yarn --cwd \"$RESOURCE_DIR\" run lint",
        "yarn --cwd \"$RESOURCE_DIR\" run build",
        "firebase database:update / ./seed/db-seed.json"
      ]
    }
  ],
  "hosting": {
    "public": "./packages/frontend/dist",
    "predeploy": [
      "yarn --cwd  \"$RESOURCE_DIR\" lint",
      "yarn --cwd  \"$RESOURCE_DIR\" build"
    ]
  },
  "emulators": {
    "auth": {
      "port": 9099
    },
    "functions": {
      "port": 5001
    },
    "database": {
      "port": 9000
    },
    "ui": {
      "enabled": true
    },
    "singleProjectMode": true
  },
  "database": {
    "rules": "database.rules.json"
  }
}
