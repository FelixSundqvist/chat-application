{
  "compilerOptions": {
    "baseUrl": "./",
    "rootDir": "./",
    "target": "ES2020",
    "module": "commonjs",
    "moduleResolution": "node",
    "declaration": false,
    "importHelpers": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "lib": ["es2020"],
    "skipDefaultLibCheck": true,
    "skipLibCheck": true,
    "paths": {
      "frontend": ["packages/frontend/src/index.ts"]
    }
  },
  "exclude": ["node_modules"]
}
